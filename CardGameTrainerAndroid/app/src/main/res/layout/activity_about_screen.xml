<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#FFFFFF"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/about_screen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CardGameTrainer has been developed by Guillaume Croteau."
        android:textColor="#000000"
        android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="The source code of this application can be found at: "
            android:textColor="#000000"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Get in touch with the developer!"
            android:textColor="#000000"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"/>
</LinearLayout>